<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMovieTitle"
            tools:text="MovieTitle"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_purple"
            android:textAlignment="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            style="@android:style/TextAppearance.Large"
            android:fontFamily="sans-serif"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/layoutMovieData"
                    layout="@layout/moviedatalayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="parent"/>
                <include
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/layoutMoviePlot"
                    layout="@layout/movieplotlayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutMovieData"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTrailerLabel"
                    android:background="@color/tableHeader"
                    android:textColor="@android:color/white"
                    android:text="@string/TrailerLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    app:layout_constraintTop_toBottomOf="@id/layoutMoviePlot"
                    style="@android:style/TextAppearance.Medium"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/textViewTrailerLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/detail_accent_label">
                    <ListView
                        android:id="@+id/trailerListView"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"/>
                    <ProgressBar
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:visibility="invisible"
                        android:layout_gravity="center"
                        android:id="@+id/progressBarTrailer"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewTrailerError"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="invisible"/>
                </FrameLayout>
            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
</layout>
