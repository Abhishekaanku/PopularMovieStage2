<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageViewTrailer"
        android:layout_width="25dp"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/videoselector"
        android:contentDescription="@string/VideoPlayButton"/>

    <TextView
        android:id="@+id/textViewTrailerLabel"
        android:layout_width="0dp"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        tools:text="TextView"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="12dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:scrollHorizontally="false"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@id/imageViewTrailer"
        app:layout_constraintBottom_toBottomOf="@id/imageViewTrailer"
        app:layout_constraintEnd_toStartOf="@id/imageshareIcon"
        app:layout_constraintStart_toEndOf="@id/imageViewTrailer"/>

    <ImageView
        android:id="@+id/imageshareIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_share"
        tools:layout_editor_absoluteX="242dp"
        tools:layout_editor_absoluteY="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/imageViewTrailer"
        android:contentDescription="@string/ShareButton"/>

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/imageViewTrailer"/>

</android.support.constraint.ConstraintLayout>
